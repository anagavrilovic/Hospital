<Window x:Class="Hospital.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFCCDDE8"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="1" Grid.Column="0" Content="LEKAR" Margin="200,90,20,20" FontSize="20" Background="White" Foreground="#FF6E8FA5" Click="DoctorClick"/>
        <Button Grid.Row="1" Grid.Column="1" Content="SEKRETAR" Margin="20,90,200,20" FontSize="20" Background="White" Foreground="#FF6E8FA5" Click="SecretaryClick"/>
        <Button Grid.Row="2" Grid.Column="0" Content="UPRAVNIK" Margin="200,20,20,90" FontSize="20" Background="White" Foreground="#FF6E8FA5" Click="ManagerClick"/>
        <Button Grid.Row="2" Grid.Column="1" Content="PACIJENT" Margin="20,20,200,90" FontSize="20" Background="White" Foreground="#FF6E8FA5" Click="PatientClick"/>
    </Grid>
</Window>
