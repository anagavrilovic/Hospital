<Page x:Class="Hospital.View.Doctor.Lekovi"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hospital.View.Doctor"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Lekovi">

    <Grid Margin="0,50,0,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="0" Margin="20,20,0,0">
            <StackPanel Orientation="Horizontal">
                <Label Content="Pretraži lek:" FontSize="18"/>
                <TextBox x:Name="pretrazi" Margin="10,0,0,0" BorderThickness="1"></TextBox>
            </StackPanel>
            <ListBox Name="listBox" IsSynchronizedWithCurrentItem="True" Margin="0,20,0,20"
                     SelectionChanged="listBox_SelectionChanged" Height="450"></ListBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="20,20,20,0">
            <Label x:Name="lekLabel" HorizontalAlignment="Left" FontSize="20">
                <Label.Content>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0}  {1}">
                                <Binding Path="Text" />
                                <Binding Path="Lek.Name" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </Label.Content>
            </Label>
            <Label Margin="0,10,0,0" FontSize="15" Content="Sastojci:"/>
            <StackPanel Orientation="Horizontal">
                <ListBox x:Name="sastojci" Height="150" IsSynchronizedWithCurrentItem="True" Width="300" Margin="0,0,30,0" IsEnabled="False"    ></ListBox>
                <StackPanel Orientation="Vertical">
                    <TextBox x:Name="txtSastojak" Width="120" Height="30" FontSize="15"  Margin="15,0,0,0" Visibility="Hidden" 
                             Text="{Binding Sastojak, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button x:Name="dodajSastojak" Width="120" Height="30" Content="Dodaj sastojak" Margin="15,15,0,0" IsEnabled="False" Visibility="Hidden"
                        Background="Navy" Foreground="White" Click="dodajSastojak_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="izbaciSastojak" Width="120" Height="30" Content="Izbaci sastojak" Margin="15,10,0,0" IsEnabled="False" Visibility="Hidden"
                        Background="Crimson" Foreground="White" Click="izbaciSastojak_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Label Content="Doza u miligramima:" FontSize="15"/>
                <TextBox x:Name="doza" Width="40" Height="25" Text="{Binding Lek.DosageInMg}" IsEnabled="False"/>
            </StackPanel>
            <Label Content="Zamenski lekovi:" Margin="0,10,0,10" FontSize="15"/>
            <StackPanel Orientation="Horizontal">
                <ListBox x:Name="listaZamena" Height="150" IsSynchronizedWithCurrentItem="True" Width="300" IsEnabled="False"></ListBox>
                <StackPanel Orientation="Vertical" Margin="30,0,0,0">
                    <Button x:Name="izmeni" Width="120" Height="30" Content="Izmeni lek" Margin="15,-15,0,0" Click="Izmeni"
                        Background="Navy" Foreground="White">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="izbaciZamenu" Width="120" Height="30" Content="Izbaci zamenski lek" Margin="15,10,0,0" Visibility="Hidden"
                        Background="Crimson" Foreground="White" IsEnabled="False" Click="izbaciZamenu_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="dodajZamenu" Width="120" Height="30" Content="Dodaj zamenski lek" Margin="15,10,0,0" 
                            Background="White" IsEnabled="False" Visibility="Hidden" Click="dodajZamenu_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>    
                        </Button.Resources>
                    </Button>
                    <Button x:Name="sacuvaj" Width="120" Height="30" Content="Sačuvaj izmene" Margin="15,50,0,0" 
                            IsEnabled="False" Visibility="Hidden" Foreground="White" Background="Navy">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
