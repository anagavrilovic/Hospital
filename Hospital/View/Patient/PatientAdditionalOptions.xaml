<Page x:Class="Hospital.View.PatientAdditionalOptions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hospital.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PatientAdditionalOptions">

    <Grid Background="White">
        <Button Name="NotesButton" Content="Beleške" HorizontalAlignment="Left" VerticalAlignment="Top" Width="316" Margin="239,10,0,0" Height="48" Click="NotesButton_Click"/>
        <Button Content="Kreiraj izveštaj o terapijama" HorizontalAlignment="Left" VerticalAlignment="Top" Width="316" Margin="239,94,0,0" Height="48" Click="ViewReport"/>
        <Button Name="RateButton" Content="Oceni bolnicu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="316" Margin="239,179,0,0" Height="48" Click="RateHospital"/>
        <Button Content="Pošalji povratne informacije" HorizontalAlignment="Left" VerticalAlignment="Top" Width="316" Margin="239,265,0,0" Height="48" Click="SendFeedback"/>
        <Button Content="Nazad" HorizontalAlignment="Left" VerticalAlignment="Top" Width="316" Margin="239,355,0,0" Height="48" Click="GoBack"/>

    </Grid>
</Page>
