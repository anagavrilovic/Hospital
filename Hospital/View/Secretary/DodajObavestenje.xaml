<Window x:Class="Hospital.View.DodajObavestenje"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.View"
        mc:Ignorable="d"
        Title="DodajObavestenje" Height="665" Width="1070"
        Background="#FFD0DADD" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="OBAVEŠTENJA > Kreiranje novog obaveštenja" FontSize="24" Foreground="#FF517C7C" Margin="20,10,0,0"/>


        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                    <TextBlock Text="Naslov:" FontSize="15" Foreground="#FF517C7C" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <TextBox x:Name="NaslovText" Text="{Binding Notification.Title, Mode=OneWayToSource}" Width="200" Height="25" Margin="10,0,0,0" />
                </StackPanel>

                <TextBlock Grid.Column="1" Text="{Binding Notification.Date, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Center" FontSize="15" Foreground="#FF517C7C" Margin="20,25,20,0"  />

                <StackPanel Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,25,10,0">
                    <CheckBox IsChecked="{Binding Path=Notification.Sekretar, Mode=TwoWay}" Content="SEKRETAR" FontSize="15" Foreground="#FF517C7C"/>
                    <CheckBox IsChecked="{Binding Path=Notification.Lekar, Mode=TwoWay}" Content="LEKAR" FontSize="15" Foreground="#FF517C7C"/>
                </StackPanel>
                <StackPanel Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,25,20,0">
                    <CheckBox IsChecked="{Binding Path=Notification.Upravnik, Mode=TwoWay}" Content="UPRAVNIK" FontSize="15" Foreground="#FF517C7C"/>
                    <CheckBox IsChecked="{Binding Path=Notification.Pacijent, Mode=TwoWay}" Content="PACIJENT" FontSize="15" Foreground="#FF517C7C"/>
                </StackPanel>

            </Grid>

            <TextBox Text="{Binding Notification.Content}" Grid.Row="1" Margin="20,0,20,20" TextWrapping="Wrap"/>
        </Grid>

        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Button Content="Potvrdi" Width="100" Height="30" Margin="0,0,10,0" Style="{StaticResource ButtonCalendar}" Click="BtnPotvrdiClick" />
            <Button Content="Odustani" Width="100" Margin="10,0,0,0" Style="{StaticResource ButtonOdustani}" Click="BtnOdustaniClick" />
        </StackPanel>
    </Grid>
</Window>
