      xmlns:local="clr-namespace:Hospital.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PatientMenu">

    <Grid Background="White">
        <Button Content="Izlaz" HorizontalAlignment="Left" Height="43" Margin="251,367,0,0" VerticalAlignment="Top" Width="316" Click="Exit"/>
