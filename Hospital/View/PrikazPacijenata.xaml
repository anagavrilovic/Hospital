<UserControl x:Class="Hospital.View.PrikazPacijenata"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hospital.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#FFDAEFF3">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Grid.Row="0" Content="Kreiraj karton" Margin="60,10" FontSize="16" Background="#FF78A5AD" Foreground="White" Click="KreirajKarton"/>
        <Button Grid.Column="1" Grid.Row="0" Content="Izmeni karton" Margin="60,10" FontSize="16" Background="#FF78A5AD" Foreground="White" />
        <Button Grid.Column="2" Grid.Row="0" Content="Izbriši karton" Margin="60,10" FontSize="16" Background="#FF78A5AD" Foreground="White"/>

    </Grid>
</UserControl>
