<Window x:Class="Hospital.View.PatientMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.View"
        mc:Ignorable="d"
        Title="PatientMain" Height="450" Width="800">
    <Grid>
        <Button Content="Zakaži pregled" HorizontalAlignment="Left" Height="40" Margin="267,139,0,0" VerticalAlignment="Top" Width="214" Click="MakeAnAppointment"/>
        <Button Content="Lista obavljenih pregleda/operacija" HorizontalAlignment="Left" Height="40" Margin="267,286,0,0" VerticalAlignment="Top" Width="214" Click="PassedAppointmentList"/>
        <Button Content="Lista zakazanih pregleda/operacija" HorizontalAlignment="Left" Height="40" Margin="267,219,0,0" VerticalAlignment="Top" Width="214" Click="AppointmentList"/>
        <Button Content="Podešavanja" HorizontalAlignment="Left" Height="40" Margin="267,351,0,0" VerticalAlignment="Top" Width="214" Click="Settings"/>
        <Button Name="NotificationsButton" Content="Obaveštenja" HorizontalAlignment="Left" VerticalAlignment="Top" Width="214" Margin="267,10,0,0" Height="40" Click="Notifications"/>

    </Grid>
</Window>
